{
  "title": "Climate Change 1",
  "publicationStatus": "public",
  "subtitle": "Atmosphere & Land Interactions Without Graphs",
  "helpOnLoad": false,
  "aboutOnLoad": true,
  "about": [
    "Explore how solar radiation (yellow arrows) interacts with the land and gases in the atmosphere.",
    "",
    "Press the **Erupt!** button to release carbon dioxide.",
    "Follow an energy packet or molecule of carbon dioxide to see what happens when there is more carbon dioxide in the atmosphere.",
    ""
    ],
  "theme": ["has","standalone-playback", "no-slider-bar"],
  "aspectRatio": 1,
  "fontScale": 0.8,
  "models": [
    {
      "type": "iframe-model",
      "id": "iframe-model",
      "url": "models/lab-version/1/iframe-model/iframe-model.json",
      "modelOptions":{
        "url": "//models-resources.concord.org/agentscript/global-climate/lab-embeddable.html",
        "animRate": 60,
        "showGases": true,
        "showRays": true,
        "showHeat": true,
        "keyLabels": [
          "solar radiation",
          "carbon dioxide",
          "heat"
        ]
      },
      "viewOptions": {
        "controlButtons": "play_reset"
      },
      "onLoad": [
        "post('createCO2', 4);",
        "onPropertyChange('spotlightActive', function() {",
        "  if (get('spotlightActive')) return;",
        "  // Agent may leave model area what causes spotlight deactivation.",
        "  // Ensure buttons are in sync with actual spotlight state.",
        "  if (get('followEnergy')) set('followEnergy', false);",
        "  if (get('followCO2'))    set('followCO2', false);",
        "});",
        "function disableComponents(value) {",
        "  setComponentDisabled('showGasesCheckbox', value);",
        "  setComponentDisabled('showRaysCheckbox', value);",
        "  setComponentDisabled('showHeatCheckbox', value);",
        "  setComponentDisabled('followEnergyButton', value);",
        "  setComponentDisabled('followCO2Button', value);",
        "}",
        "disableComponents(true);",
        "onStart(function() { disableComponents(false); });",
        "onStop(function() { disableComponents(true); });"
      ]
    }
  ],
  "parameters": [
    {
      "name": "followEnergy",
      "initialValue": false,
      "onChange": [
        "// Note that we have to use .post() instead of method shortcuts, as this handler is",
        "// called before iframe can register its methods (before iframe communication is started).",
        "if (value) {",
        "  post('addSunraySpotlight');",
        "  setComponentAttributes('followEnergyButton', {text: 'Stop following'});",
        "} else {",
        "  post('removeSpotlight');",
        "  setComponentAttributes('followEnergyButton', {text: 'Follow energy packet'});",
        "}"
      ]
    },
    {
      "name": "followCO2",
      "initialValue": false,
      "onChange": [
        "// Note that we have to use .post() instead of method shortcuts, as this handler is",
        "// called before iframe can register its methods (before iframe communication is started).",
        "if (value) {",
        "  post('addCO2Spotlight');",
        "  setComponentAttributes('followCO2Button', {text: 'Stop following'});",
        "} else {",
        "  post('removeSpotlight');",
        "  setComponentAttributes('followCO2Button', {text: 'Follow CO₂'});",
        "}"
      ]
    }
  ],
  "outputs": [
    {
      "name": "spotlightActive",
      "value": "return iframeOutput('spotlightActive');"
    }
  ],
  "components": [
    {
      "id": "speedSlider",
      "type": "slider",
      "min": 20,
      "max": 60,
      "steps": 10,
      "title": "",
      "fillColor": "#2DA343",
      "labels": [
        {
          "value": "20",
          "label": "slow"
        },
        {
          "value": "60",
          "label": "fast"
        }
      ],
      "width": "7em",
      "height": "auto",
      "property": "animRate",
      "retainProperty": true,
      "disabled": false
    },
    {
      "id": "showLabel",
      "type": "text",
      "text": "Show:",
      "width": "auto",
      "height": "auto",
      "tooltip": ""
    },
    {
      "id": "showGasesCheckbox",
      "type": "checkbox",
      "text": "Gases",
      "textOn": "right",
      "width": "auto",
      "height": "auto",
      "property": "showGases",
      "retainProperty": true,
      "disabled": false
    },
    {
      "id": "showRaysCheckbox",
      "type": "checkbox",
      "text": "Rays",
      "textOn": "right",
      "width": "auto",
      "height": "auto",
      "property": "showRays",
      "retainProperty": true,
      "disabled": false
    },
    {
      "id": "showHeatCheckbox",
      "type": "checkbox",
      "text": "Heat",
      "textOn": "right",
      "width": "auto",
      "height": "auto",
      "property": "showHeat",
      "retainProperty": true,
      "disabled": false
    },
    {
      "id": "removeCo2Button",
      "type": "button",
      "action": "subtractCO2();",
      "text": "Remove CO₂",
      "width": "14em",
      "height": "",
      "disabled": false
    },
    {
      "id": "followEnergyButton",
      "type": "button",
      "action": [
        "set('followCO2', false);",
        "set('followEnergy', !get('followEnergy'));"
      ],
      "text": "Follow energy packet",
      "width": "14em",
      "height": "",
      "disabled": false
    },
    {
      "id": "followCO2Button",
      "type": "button",
      "action": [
        "set('followEnergy', false);",
        "set('followCO2', !get('followCO2'));"
      ],
      "text": "Follow CO₂",
      "width": "14em",
      "height": "",
      "disabled": false
    },
    {
      "id": "eruptButton",
      "type": "button",
      "action": "erupt();",
      "text": "Erupt!",
      "width": "14em",
      "height": "",
      "disabled": false
    },
    {
      "id": "playback",
      "type": "playback",
      "stepping": true
    }
  ],
 "layout": {
    "playback-container": [
      "playback"
    ],
    "bottom-1":[
    	"speedSlider"
    ],
    "bottomLeft": [
      [
        "eruptButton",
        "removeCo2Button"
      ],
      [
        "followEnergyButton",
        "followCO2Button"
      ]
    ],

    "bottom-row-1": 
      [
      	"showLabel"
      ],
     "bottom-row-2":   
      [
        "showGasesCheckbox"
      ],
     "bottom-row-3": 
      [
        "showRaysCheckbox"
      ],
     "bottom-row-4": 
      [
        "showHeatCheckbox"
      ]
    
  },
  "template": [
    {
      "id": "playback-container",
      "top": "model.bottom",
      "left": "model.left",
      "padding-top": "0.75em",
      "padding-right": "0.5em"
    },
    {
      "id": "bottom-1",
      "top": "model.bottom",
      "left": "playback-container.right",
      "padding-bottom": "0.5em"
    },
    {
      "id": "bottomLeft",
      "top": "bottom-row-1.bottom",
      "left": "model.left"
    },
    {
      "id": "bottom-row-1",
      "top": "bottom-1.bottom",
      "left": "model.left"
    },
    {
      "id": "bottom-row-2",
      "top": "bottom-1.bottom",
      "left": "bottom-row-1.right"
    },
        {
      "id": "bottom-row-3",
      "top": "bottom-1.bottom",
     "left": "bottom-row-2.right"
    },
        {
      "id": "bottom-row-4",
      "top": "bottom-1.bottom",
      "left": "bottom-row-3.right"
    }
  ]
}
